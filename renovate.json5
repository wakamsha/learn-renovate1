{
  // enabled: false,
  $schema: "https://docs.renovatebot.com/renovate-schema.json",
  extends: ["config:base"],
  timezone: "Asia/Tokyo",
  separateMinorPatch: true,
  major: {
    stabilityDays: 7,
  },
  minor: {
    stabilityDays: 3,
  },
  patch: {
    stabilityDays: 2,
  },
  // constraints: {
  //   node: "/^\\d*[24680]\\.[0-9]+\\.0$/",
  //   patch: {
  //     enabled: false,
  //   },
  // },

  packageRules: [
    {
      groupName: "Node.js",
      matchPackageNames: ["cimg/node"],
      matchDatasources: ["docker"],
      // この正規表現は､下記を表す。
      // - Major: 偶数のみ
      // - Minor: 全て対象
      // - Patch: 0 のみ対象
      // allowedVersions: "/^\\d*[24680]\\.[0-9]+\\.0$/",
    },
    {
      groupName: "Jest",
      matchPackagePatterns: ["jest"],
      enabled: false,
    },
  ],
}
